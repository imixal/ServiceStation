@{
    ViewBag.Title = "Service";
}
<div id="preloder"><img src="~/Image/preloder.gif" /></div>

<div class="container">
    <ul class="nav nav-tabs">
        <li id="Registration-tab" class="active"><a href="#Registration" data-toggle="tab">Registration</a></li>
        <li id="Account-tab"><a href="#Account" data-toggle="tab">Account</a></li>
        <li><a href="#Orders-tab" data-toggle="tab">Orders</a></li>
        <li><a href="#Automobiles-tab" data-toggle="tab">Automobiles</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane fade in active" id="Registration">
            <div id="Check-wrapper" class="container">
                @Html.Partial("_check")
            </div>
            <div id="Registration-wrapper" class="container">
            </div>

        </div>
        <div class="tab-pane fade" id="Account">
            <div id="Find-Account-wrapper">
                @Html.Partial("_list")
            </div>
            <div id="Account-wrapper">
            </div>
        </div>
        <div class="tab-pane fade" id="Orders-tab">
            <h2>Orders <a id="refresh-order"><span class="glyphicon glyphicon-refresh"></span></a></h2>
            <div id="Orders-wrapper">
                @Html.Partial("_Orders")
            </div>
        </div>
        <div class="tab-pane fade" id="Automobiles-tab">
            <h2>Cars <a id="refresh-auto"><span class="glyphicon glyphicon-refresh"></span></a></h2>
            <div id="Automobiles-wrapper">
                @Html.Partial("_Cars")
            </div>
        </div>
        
    </div>
</div>
<div class="modal fade" id="DeleteOrder" tabindex="-1" role="dialog" aria-labelledby="myDeleteOrderLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myDeleteOrderLabel">Delete</h4>
            </div>
            <div class="modal-body" id="modal-body-delete-order">
                Are you sure?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default closer" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="delete-order-button">Delete</button>
            </div>
        </div>
    </div>
</div>
